{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
		"dist"
    ],
    "filesGlob": [
		"./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}